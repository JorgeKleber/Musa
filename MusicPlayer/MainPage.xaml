<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:views="clr-namespace:MusicPlayer.Views"
             Shell.NavBarIsVisible="False"
             x:Class="MusicPlayer.MainPage">

    <Grid>
        
        <Image x:Name="ParallaxImage"
               Source="linkinparkbackground.png"
               Aspect="Center"
               AnchorX="0" TranslationX="200" />

        <Border BackgroundColor="Black" Opacity="0.5"/>

        <HorizontalStackLayout>
            <Label FontSize="50"
                   FontFamily="SegoeWP-Bold"
                   Margin="20,10,0,50" 
                   TextColor="White">Maui</Label>
            <Label FontSize="50"
                   FontFamily="SegoeWP-Light"
                   Margin="0,10,0,50" 
                   TextColor="White">Radio</Label>
        </HorizontalStackLayout>

        <CarouselView Loop="False"
                      PeekAreaInsets="10"
                      Scrolled="CarouselView_Scrolled"
                      HorizontalScrollBarVisibility="Never">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type ContentView}">
                    <views:RecentlyPlayed />
                    <views:MusicHub />
                    <views:SearchPage />
                </x:Array>
            </CarouselView.ItemsSource>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <ContentView Content="{Binding .}" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </Grid>

</ContentPage>
