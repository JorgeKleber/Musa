<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.Componets.TitleCard">


    <Grid x:Name="MainGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Image x:Name="TitleImage"
               Source="fallen.jpg"
               Grid.RowSpan="2"/>

        <Grid x:Name="TitleFlag" Grid.Row="1">
            <Border BackgroundColor="Green" Opacity="0.6" />

            <Label x:Name="ArtistName"
               Text="Evanescence" 
               FontFamily="SegoeWP-Semibold" 
               FontSize="Subtitle" 
               TextColor="White"
               Margin="10,10"
               Grid.Row="1"/>
        </Grid>
    </Grid>

</ContentView>
